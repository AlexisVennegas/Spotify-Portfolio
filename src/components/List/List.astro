---
interface Props {
    title: string;
    index: number;
    item: {
        imageUrl: string;
        title: string;
        description: string;
        album: string;
        time: string;
        yt: string;
        github: string;
    }
}
const { title, index, item } = Astro.props;

import Reloj from "../../Icons/Reloj.astro";  

---

<div class="containerData" >
  
    <div class="">
      {index + 1}
    </div>
    <div class="">
      <picture>
        <img src={item.imageUrl} alt={item.title} />
      </picture>
      <div class="information">
        <h3 class="song-title">{item.title}</h3>
        <p class="description">{item.description}</p> 
      </div>
        
    </div>
    <div class="">
      {item.album}
    </div>
    <div class="">
      
          <div>
            {item.yt ? 
            <a href={`${item.yt}`} target="_blank">
              <img src="./yt.png" alt="logo de youtube" />
            </a> : null}
            </div>
        <div>
          {item.github ? 
          <a href={`${item.github}`} target="_blank">
            <img src="./github.png" alt="logo de github" /> 
          </a>: null}
        </div>
    </div>
    <div class="">
      {item.time}
    </div>
  </div>
  <style>
     .containerData {
      width: 100%;
      height: 60px;
      display: flex;
      margin: 4px 0;
      cursor: pointer;
      transition-duration: 300ms;
      border-radius: 0.375rem;
    }
    .containerData:hover {
      transition-duration: 300ms;
      background-color: rgb(255 255 255 / 0.1);
    }
    .containerData > div:first-child{
      /* border: 1px solid green; */
      width: 5%;
      height: 100%;
      color: rgb(161 161 170 );
      font-weight: 300;
      font-size: 0.875rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .containerData > div:nth-child(2){
      width: 40%;
      height: 100%;
      color: rgb(161 161 170 );
      font-weight: 300;
      font-size: 0.875rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;
      display: flex;
      align-items: center;
    }
    .containerData > div:nth-child(3){
      width: 25%;
      height: 100%;
      color: rgb(161 161 170 );
      font-weight: 300;
      font-size: 0.875rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;
      display: flex;
      align-items: center;
    }
    .containerData > div:nth-child(4){
      width: 20%;
      height: 100%;
      color: rgb(161 161 170 );
      display: flex;
      align-items: center;
      display: flex;
    }

    .containerData > div:nth-child(4) > div {
      width: 50%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: all 0.3s ease-in-out;
    }
    .containerData > div:nth-child(4) > div > a > img {
      width: 20px;
      height: 20px;
      transition: all 0.3s ease-in-out;
      cursor: pointer;
    }
    .containerData > div:nth-child(4) > div:hover img {
      transform: scale(2.1);
      transition: all 0.3s ease-in-out;
    }

    .containerData > div:nth-child(5){
      width: 10%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      color: rgb(161 161 170 );
    }
    picture {
      width: 44px;
      height: 44px;
    }
    picture > img {
      width: 44px;
      height: 44px;
      border-radius: 0.375rem;
    }
    .information {
      width: 80%;
      height: 100%;
      margin-left: 15px;
      display: flex;
      flex-direction: column;
      justify-content: center;

    }
    .song-title {
      color: white;
      font-weight: 300;
      font-size: 0.875rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;
    }
    .description {
      color: rgb(161 161 170 );
      font-weight: 300;
      font-size: 0.89rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;
    }
    @media (width < 768px) {
       .containerData > div:nth-child(4), .containerData > div:nth-child(5), .containerData > div:nth-child(3){
        display: none !important;
       }
        .containerData > div:nth-child(2){
          width: 90%;
        }
        .containerData > div:nth-child(1){
          width: 10%;
        }
        
    }
  </style>