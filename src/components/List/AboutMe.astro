---
import List from './List.astro'
import { Skills } from "../../Data/lib.js";
import Card from "./Card.astro";
import Snetwork from "./SNetwork.astro";
import Slider from "../React/Slider.jsx";
---

<section>
    {
        Skills.slice(0, 5).map((item, index) => (
        <List key={index} item={item} index={index} />
      ))
    }
    <h1 class="title">Discografía</h1> 
    <div class="containerArticleModule">
        <Card id="Projects" />
    </div>
    <h1 class="title">Estudios</h1>
    <div class="containerArticleModule">
        <Card id="Educacion" />
    </div>
    <h1 class="title">Relacionados</h1>
    <div class="containerArticleModule">
        <Card id="Cantantes" />
    </div>
    <h1 class="title">Informacion</h1> 
    <div class="containerArticleModule especialContainer">
        <div class="slideraboutme">
            <Slider client:load id={3}/>
            <p class="aboutmeText">Profesional con una destacada capacidad de aprendizaje y resolución de problemas.
                Experiencia en el diseño, desarrollo e implementación de aplicaciones web utilizando
                tecnologías modernas. Conocimientos sólidos en frontend y backend, con una pasión
                por crear soluciones eficientes y de alta calidad. Capaz de trabajar en equipo y
                adaptarse rápidamente a nuevos desafíos tecnológicos.
                </p>
        </div>
        <div class="social-network">
            <Snetwork />
        </div>
    </div>
</section>

<style>
    section {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
    }
    .title {
        font-size: 23px;
        color: white;
        font-weight: 800;
        font-family: "Poppins", sans-serif;
        margin:30px 0;
    }
    .containerArticleModule {
        width: 100%;
        height: auto;
        display: flex;
        overflow-x: auto;
        padding: 0 10px;
        justify-content: space-between; 
        scrollbar-width: none;      
    }
    .slideraboutme{
        width: 70%;
        height: auto;
        box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;
        position: relative;
        overflow: hidden;
        overflow-x: hidden;
    }
    .aboutmeText{
        position: absolute;
        font-size: 15px;
        font-weight: 500;
        color: white;
        border-radius: 10px;
        background-color: rgba(0, 0, 0, 0.551);
        font-family: "Poppins", sans-serif;
        padding: 15px;
        line-height: 20px;
        top: 70%;
        width: 518px;
    }
    .social-network{
        width: 30%;
        height: auto;
        margin-top: 20px;
    }
    @media (width < 768px){
        .especialContainer {
            flex-direction: column;
        }
        .slideraboutme, .social-network {
            width: 100% !important;
        }
        }
    @media (width < 1200px){
        .aboutmeText {
            position: absolute;
            font-size: 11px;
            font-weight: 500;
            color: white;
            border-radius: 10px;
            background-color: rgba(0, 0, 0, 0.551);
            font-family: "Poppins", sans-serif;
            padding: 15px;
            line-height: 20px;
            top: 57%;
            width: 100%;
            height: auto;
        }
    }
</style>