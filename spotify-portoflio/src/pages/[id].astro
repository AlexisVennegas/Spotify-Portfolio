				<div class="information-music">
					<div class="cover">
						<img src={`./${id}.jpg`} alt="varios lenguajes de programacion"/>
						<div class="information">
							<h4>{id}</h4>
							<p>Alexis Venegas</p>
						</div>
					</div>
				</div>
				<div class="control-music">
					<Thumb />
				</div>
				<div class="control-volumen">
