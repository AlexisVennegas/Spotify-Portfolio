---
import Layout from '../layouts/Layout.astro';


import Navigator from '../components/Navigator.astro';
import AsideList from '../components/AsideList.astro';
import AsideLibrary from '../components/AsideLibrary.astro';
import CardProjects from '../components/CardProjects.astro';
import CardEducation from '../components/CardEducation.astro';


---

<Layout title="Bienvenido a mi Portafolio">
	<div class="wrapper">
		<div class="section-up">
			<div class="panel-left">
				<Navigator />
				<div class="list-songs">
				<AsideList />
				<ul>
					<AsideLibrary id="1" title="Contacto" />
					<AsideLibrary id="2" title="Habilidades"/>
					<AsideLibrary id="3" title="Conoceme" />
					<CardProjects id="4" title="Proyectos" />
					<CardEducation id="5" title="Educacion" />
				</ul>
				</div>
			</div>
			<div class="panel-center">
				<div class="player">
				</div>
			</div>
		</div>
		<div class="section-under">
			<div class="panel-under">
				<div class="information-music">
				</div>
				<div class="control-music">
				</div>
				<div class="control-volumen">
				</div>
			</div>
		</div>
	</div>	
		
</Layout>

<style>
	.wrapper {
		width: 100%;
		height: 100vh;
		background-color: #010101;	
	}	
	.section-up {
		display: flex;
		width: 100%;
		height: 85%;
	}
	.section-under {
		display: flex;
		width: 100%;
		height: 15%;
	}
	.panel-left {
		width: 350px;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: conter;
		align-items: center;

	}
	.panel-center {
		width: 80%;
		height: 100%;
		display: flex;
		justify-content: center;
	}
	.player {
		width: 99%;
		height: 80%;
		border-radius: 10px;
		background: linear-gradient(to bottom, #1db954b5, #000000);
		margin-top: 10px;
	}
	.panel-under {
		width: 100%;
		height: 100%;
		border: 1px solid white;
		display: flex;
	}
	.information-music {
		width: 22%;
		height: 100%;
		border: 1px solid red;
	}
	.control-music {
		width: 58%;
		height: 100%;
		border: 1px solid red;
	}
	.control-volumen {
		width: 20%;
		height: 100%;
		border: 1px solid red;
	}
	
	.list-songs {
		width: 334px;
		height: 620px;
		border-radius: 10px;
		background-color:rgb(24 24 27);
	}
	
</style>
