---
import Layout from '../layouts/Layout.astro';


import Navigator from '../components/Navigator.astro';
import AsideList from '../components/AsideList.astro';
import AsideLibrary from '../components/AsideLibrary.astro';
import Thumb from '../components/Thumb.astro';
import VolumenControl from '../components/VolumenControl.astro';
import TextTime from '../components/TextTime.astro';
import ContentArticle from '../components/ContentArticle.astro';


---

<Layout title="Bienvenido a mi Portafolio">
	<div class="wrapper">
		<div class="section-up">
			<div class="panel-left">
				<Navigator client:visible/>
				<div class="list-songs">
				<AsideList />
				<ul>
					<AsideLibrary  />
				</ul>
				</div>
			</div>
			<div class="panel-center">
				<div class="player" >
					<TextTime />
					<ContentArticle />
				</div>
			</div>
		</div>
		<div class="section-under">
			<div class="panel-under">
				<div class="information-music">
					<div class="cover">
					</div>
				</div>
				<div class="control-music">
					<Thumb />
				</div>
				<div class="control-volumen">
					<VolumenControl />
				</div>
			</div>
		</div>
	</div>	
		
</Layout>

<style>
	.wrapper {
		width: 100%;
		height: 100vh;
		background-color: #010101;	
	}	
	.section-up {
		display: flex;
		width: 100%;
		height: 85%;
	}
	.section-under {
		display: flex;
		width: 100%;
		height: 15%;
	}
	.panel-left {
		width: 350px;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: conter;
		align-items: center;

	}
	.panel-center {
		width: 80%;
		height: 100%;
		display: flex;
		justify-content: center;
	}
	.player {
		width: 99%;
		height: auto;
		border-radius: 10px;
		background: linear-gradient(to bottom, #1db954b5,  #121212 50%);
		transition: background 0.5s;
		margin-top: 10px;
	}
	.panel-under {
		width: 100%;
		height: 100%;
		/* border: 1px solid white; */
		display: flex;
	}
	/* modificar el scroll depanel center */
	


	.information-music {
		width: 22%;
		height: 100%;
	}
	.cover {
		width: 64px;
		height: 64px;
		border-radius: 0.375rem;
		background-color:	#121212;
		margin: 20px 0px 0px 10px
	}
	.control-music {
		width: 58%;
		height: 100%;
		/* border: 1px solid red; */
	}
	.control-volumen {
		width: 20%;
		height: 100%;
		/* border: 1px solid red; */
	}
	
	.list-songs {
		width: 334px;
		height: 100%;
		border-radius: 10px;
		background-color:#121212;
		overflow-y: scroll;
		overflow-x: hidden;
	}
	
</style>
