---



import { Information } from "../Data/lib.js";
---

{
    Information.map((item) => (
    <a href={item.title}>
    <article>
        <div class="pictureArticle">
            <img src={`./${item.title}.jpg`} alt="imagen de articulo" transition:name=`Album-${item.title}` />
            <button class="play-button" transition:name=`Button-${item.title}`>
                <svg class="svg-special" role="img" height="16" width="16" aria-hidden="true" viewBox="0 0 16 16"><path d="M3 1.713a.7.7 0 0 1 1.05-.607l10.89 6.288a.7.7 0 0 1 0 1.212L4.05 14.894A.7.7 0 0 1 3 14.288V1.713z"></path></svg>
            </button>
        </div>
        <div class="infoArticle">
            <h4 class={`titleCard${item.title}-1`} 
                transition:name=`titleCard${item.title}`
            >{item.title}</h4>
            <p transition:name=`paragraph${item.title}`>Alexis Venegas</p>
        </div>

    </article>
    </a>
    ))
}

<style>
  
    article {
        width: 176px;
        height: 236px;
        border-radius: 0.375rem;
        background-color: rgb(113 113 122 / 0.3);
        padding: 10px;
        margin-left: 20px;
        cursor: pointer;
       
    }
    .pictureArticle {
        width: 100%;
        height: 70%;
        position: relative;
        z-index:1
    }
    .pictureArticle > img {
        width: 100%;
        height: 100%;
        border-radius: 0.375rem;
    
    }
    .infoArticle {
      width: 100%;
      margin-top: 10px;
    }
    .infoArticle > h4 {
        color: white;
        font-size: 1rem;
        line-height: 1.25rem;

    }
    .infoArticle > p {
        color:rgb(156 163 175);
        font-size: 0.6rem;
        line-height: 1rem;
    }
   
    .play-button {
        background-color: rgb(34 197 94);
        border: 0px solid transparent;
        border-radius: 50%;
        padding: 8px;
        cursor: pointer;
        width: 50px;
        height: 50px;
        position: relative;
        left: 100px;
        top: -50px;
        transition:  0.5s;
        z-index: 2;
        opacity: 0;
    }
    article:hover .play-button{
        opacity: 1 !important;
        transition:  0.5s;
        left: 100px;
        top: -64px;
    }
</style>

