---
interface Props {
	id: number;
    title: string;
}
const { id, title } = Astro.props;

---

<li class="liListsongs">    
    <a href="#">
        <div class="cover">
            <img src="./proyecto1.png" class="album album1" alt="captura de pantalla de programacion"/>
            <img src="./proyecto2.png" class="album album2" alt="captura de pantalla de programacion"/>
            <img src="./proyecto3.png" class="album album3" alt="captura de pantalla de programacion"/>
            <img src="./proyecto4.png" class="album album4" alt="captura de pantalla de programacion"/>
        </div>
        <div class="info">
            <h5>{title}</h5>
            <p>Artista</p>
        </div>
    </a>
</li>

<style>
    ul {
        list-style: none;
        width: 100%;
        height: 90%;
    }
    a {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        height: 10%;
        text-decoration: none;
        color: white;
        padding: 10px;
        margin-left: 20px;
    }
    .cover {
        width: 40px; /* Puedes ajustar el tamaño según sea necesario */
        height: 40px; /* Puedes ajustar el tamaño según sea necesario */
        border-radius: 0.375rem;
        position: relative;
    }
    .album {
        position: absolute;
        width: 50%; /* Ajusta el tamaño según sea necesario */
        height: 50%; /* Ajusta el tamaño según sea necesario */
        object-fit: cover; /* Para asegurarte de que las imágenes cubran el espacio */
    }

    .album1 {
        top: 0;
        left: 0;
        border-radius: 0.375rem 0 0 0;
    }

    .album2 {
        top: 0;
        right: 0;
        border-radius: 0 0.375rem 0 0;
    }

    .album3 {
        bottom: 0;
        left: 0;
        border-radius: 0 0 0 0.375rem;
    }

    .album4 {
        bottom: 0;
        right: 0;
        border-radius: 0 0 0.375rem 0;
    }
   

    .info {
        margin-left: 15px;
    }
</style>