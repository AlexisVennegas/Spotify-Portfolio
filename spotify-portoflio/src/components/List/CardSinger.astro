---

import {Cantantes} from "../../Data/lib.js";
interface CardProps {
    id: string;
}
const { id } = Astro.props;


---


{
    id === "Cantantes" ? 
    Cantantes.map((item, index) => (
        <article key={index}>
            <div class="pictureArticle">
                <img src={item.imageUrl}/>
            </div>
            <div class="infoArticle">
                <h4>{item.title}</h4>
                <p>Link • 2021</p>
            </div>
        </article>
    )) 
        : ""

}

<style>
    article {
        width: 176px;
        height: 236px;
        border-radius: 0.375rem;
        padding: 10px;
        cursor: pointer;
        transition-duration: 300ms;
        margin: 0 10px; /* Reduce el margen horizontal */
        flex-shrink: 0; /* Asegúrate de que los artículos no se encojan */
    }
    .pictureArticle {
        width: 100%;
        height: 70%;
        position: relative;
        z-index: 1;
    }
    .pictureArticle > img {
        width: 100%;
        height: 100%;
        border-radius: 0.375rem;
    }

    .infoArticle {
        width: 100%;
        margin-top: 10px;
    }
    .infoArticle > h4 {
        color: white;
        font-size: 13px;
        line-height: 1.25rem;
        font-family: "Poppins",sans-serif;
    }
    .infoArticle > p {
        color: rgb(156 163 175);
        font-size: 0.6rem;
        line-height: 1rem;
        font-family: "Poppins",sans-serif;
    }
</style>
