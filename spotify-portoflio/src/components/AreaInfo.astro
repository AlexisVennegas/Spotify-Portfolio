---
interface Props {
    title: string;
}
const { title } = Astro.props;
import { Skills } from "../Data/lib.js";
import { Projects } from "../Data/lib.js";
import { Education } from "../Data/lib.js";
import List from "./List/List.astro";
import Reloj from "../Icons/Reloj.astro";
---

    <div class="playListOrder">
      <header>
        <div class="">
          #
        </div>
        <div class="">
          Título
        </div>
        <div class="">
          Álbum
        </div>
        <div class="">
            Example
        </div>
        <div class="">
          <Reloj />
        </div>
        
        

      </header>
      {title === "Habilidades" ? (
      Skills.map((item, index) => (
        <List key={index} item={item} index={index} />
      ))
    ) : title === "Proyectos" ? (
      Projects.map((item, index) => (
        <List key={index} item={item} index={index} />
      ))
    ) : title === "Educacion" ? (
      Education.map((item, index) => (
        <List key={index} item={item} index={index} />
      ))
    ) : null}
    
    </div>


  <style>
    .playListOrder {
      width: 90%;
      height: 100%;
    }
    header {
      width: 100%;
      height: 15%;
      display: flex;
      border-bottom: 1px solid gray;
    }
    header > div:first-child {
      width: 5%;
      height: 100%;
      color: rgb(161 161 170 );
      font-weight: 300;
      font-size: 0.875rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    header > div:nth-child(2) {
      width: 40%;
      height: 100%;
      color: rgb(161 161 170 );
      font-weight: 300;
      font-size: 0.875rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;

      display: flex;
      align-items: center;
    }
    header > div:nth-child(3) {
      width: 25%;
      height: 100%;
      color: rgb(161 161 170 );
      font-weight: 300;
      font-size: 0.875rem;
      line-height: 1.25rem;
      font-family: 'Circular Spotify Text', 'Arial', sans-serif;
      display: flex;
      align-items: center;

    }
    header > div:nth-child(4) {
      width: 20%;
      height: 100%;
      display: flex;
    
      align-items: center;
      color: rgb(161 161 170 );
    }
    header > div:nth-child(5) {
      width: 10%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      color: rgb(161 161 170 );
    }
   
  </style>