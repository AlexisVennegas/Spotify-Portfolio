---
interface Props {
    title: string;
}
const { title } = Astro.props;
import { Skills } from "../Data/lib.js";


---
<table>
    <thead>
      <tr class="trhead">
        <th>#</th>
        <th>Título</th>
        <th>Álbum</th>
        <th>
          <svg class="svg-special" role="img" height="16" width="16" aria-hidden="true" viewBox="0 0 16 16" fill="currentColor">
            <path d="M8 1.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"></path>
            <path d="M8 3.25a.75.75 0 0 1 .75.75v3.25H11a.75.75 0 0 1 0 1.5H7.25V4A.75.75 0 0 1 8 3.25z"></path>
          </svg>
        </th>
      </tr>
    </thead>
    <tbody>
    
        {
        title === "Habilidades" ? Skills.map((item, index) => (
                <tr>
                    <td>{index + 1}</td>
                    <td class="flex">
                        <picture>
                            <img src={item.imageUrl} alt={item.title} />
                        </picture>
                        <div>
                            <h3 class="song-title">{item.title}</h3>
                            {/* <span class="song-album">{item.description}</span> */}
                        </div>
                    </td>
                    <td>{item.album}</td>
                    <td>{item.time}</td>
                </tr>
            )) : null
        }


    </tbody>
  </table>
  <style>
  

    table {
      width: 100%;
      border-collapse: collapse;
      border-spacing: 0;
      margin-top: 20px;
     background-color: rgb(24 24 27);
    }
    .trhead > th{
       
        color: rgb(161 161 170);
        font-size: 0.875rem;
        line-height: 1.25rem;
    }
    tbody {
        border-top: 1px solid #333;
    }

    th, td {
      padding: 10px;
      text-align: left;
    }

    th {
      color: #eee;
      font-weight: normal;
    }

    td {
      color: #ccc;
    }

    td img {
      width: 44px;
      height: 44px;
      border-radius: 0.375rem;
      margin-right: 10px;
    }

    .flex {
      display: flex;
      align-items: center;
    }

    .song-title {
        font-size: 16px;
        font-weight: 400;
        margin-bottom: 4px;
        color: white;
        font-family: 'circe', sans-serif;
    }

    .song-album {
        font-size: 7px;
        color: #ccc;    
    }

    .duration {
      font-size: 14px;
    }
  </style>