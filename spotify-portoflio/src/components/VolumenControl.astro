---
import Volumen from '../Icons/Volumen.astro'
---

<div class="volume-control">
    <button class="volume-button">
        <Volumen />
    </button>
    <div class="slider-container">
        <div class="slider-bar" style="width: 44%;"></div>
        <div class="slider-thumb" style="left: 44%;"></div>
    </div>
</div>

<style>
    .volume-control {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        width: 100%;
        height: 100%;
    }

    .volume-button {
        opacity: 0.7;
        transition: opacity 0.3s;
        cursor: pointer;
        background: transparent;
        border: none;
    }

    .volume-button:hover {
        opacity: 1;
    }

    .slider-container {
        position: relative;
        width: 95px;
        height: 4px;
        background-color: #404040;
        border-radius: 2px;
        overflow: hidden;
        display: flex;
        align-items: center;
    }

    .slider-bar {
        position: absolute;
        height: 100%;
        background-color: white;
        transition: width 0.1s ease;
    }

    .slider-thumb {
        position: absolute;
        top: -5px;
        width: 12px;
        height: 12px;
        background-color: white;
        border-radius: 50%;
        border: 2px solid #1DB954;
        transform: translateX(-50%);
        display: none;
    }

    .slider-container:hover .slider-thumb {
        display: block;
    }
</style>