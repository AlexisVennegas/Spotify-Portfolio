---
interface Props {
	id: number;
    title: string;
}

const { id, title } = Astro.props;

---
    <li>    
        <a href="#">
            <div class="cover">
                <div class="top"></div>
                <div class="bottom" style=" background-color: rgb(208, 40, 56);"></div>
            </div>
            <div class="info">
                <h5>{title}</h5>
                <p>Artista</p>
            </div>
        </a>
    </li>


<style>
    ul {
        list-style: none;
        width: 100%;
        height: 90%;
    }
    a {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        height: 10%;
        text-decoration: none;
        color: white;
        padding: 10px;
        margin-left: 20px;
    }
    .cover {
        width: 40px; /* Puedes ajustar el tamaño según sea necesario */
        height: 40px; /* Puedes ajustar el tamaño según sea necesario */
        display: flex;
        flex-direction: column;
        border-radius: 0.375rem;
    }

    .top {
        background-color: white;
        height: 40%;
        border-radius: 0.375rem 0.375rem 0 0 ;
    }

    .bottom {
       
        height: 60%;
        border-radius: 0 0 0.375rem 0.375rem;
    }
    .info {
        margin-left: 15px;
    }
</style>