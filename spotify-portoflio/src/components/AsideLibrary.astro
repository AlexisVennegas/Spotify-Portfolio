---
interface Props {
	id: number;
    title: string;
}

const { id, title } = Astro.props;
function getColor(id: number): string {
  const colors: Record<number, string> = {
    1: "rgb(208, 40, 56)",
    2: "rgb(40, 208, 56)",
    3: "rgb(56, 40, 208)",
    4: "rgb(208, 208, 40)",
  };
  return colors[id] || "rgb(208, 40, 56)"; // Default color if id is not in the list
}
const backgroundColor = getColor(id);
---
    <li class="liListsongs">    
        <a href="#">
            <div class="cover">
                <div class="top"></div>
                <div class="bottom" style={`background-color: ${backgroundColor};`}>
                    <img src={`./${title}.png`} alt="varios lenguajes de programacion"/>
                </div>
            </div>
            <div class="info">
                <h5>{title}</h5>
                <p>Artista</p>
            </div>
        </a>
    </li>


<style>
    ul {
        list-style: none;
        width: 100%;
        height: 90%;
    }
    a {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        height: 10%;
        text-decoration: none;
        color: white;
        padding: 10px;
        margin-left: 20px;
    }
    .cover {
        width: 45px; /* Puedes ajustar el tamaño según sea necesario */
        height: 45px; /* Puedes ajustar el tamaño según sea necesario */
        display: flex;
        flex-direction: column;
        border-radius: 0.375rem;
    }

    .top {
        background-color: white;
        height: 50%;
        border-radius: 0.375rem 0.375rem 0 0 ;
    }

    .bottom {
        position: relative;
        height: 50%;
        border-radius: 0 0 0.375rem 0.375rem;
    }
    .bottom > img {
        width: 75%;
        border-radius: 0.375rem;
        position: absolute;
        transform: translate(-50%, -50%); /* Centra la imagen */
        left: 50%;
        mask-image: linear-gradient(black 80%, transparent); /* Efecto degradado */
    }
    .info {
        margin-left: 15px;
    }
    p {
        color: rgb(156 163 175);
    }
</style>