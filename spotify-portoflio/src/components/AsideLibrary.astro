function getColor(id: number): string {
  const colors: Record<number, string> = {
    1: "rgb(208, 40, 56)",
    2: "rgb(40, 208, 56)",
    3: "rgb(56, 40, 208)",
    4: "rgb(208, 208, 40)",
  };
  return colors[id] || "rgb(208, 40, 56)"; // Default color if id is not in the list
}
const backgroundColor = getColor(id);
