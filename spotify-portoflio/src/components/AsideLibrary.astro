---
interface Props {
	id: number;
    title: string;
}

const { id, title } = Astro.props;

---
    <li>    
        <a href="#">
            <picture>
                <source srcset="https://via.placeholder.com/150" >
                <img src="https://via.placeholder.com/100" alt="A placeholder image">
            </picture>
            <div class="info">
                <h5>{title}</h5>
                <p>Artista</p>
            </div>
        </a>
    </li>


<style>
    ul {
        border: 1px solid white;
        list-style: none;
        width: 100%;
        height: 90%;
    }
    a {
        border: 1px solid white;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        height: 10%;
        text-decoration: none;
        color: white;
        padding: 10px;
    }
    img {
        width: 35px;
        height: 35px;
        margin-left: 20px;   
    }
    .info {
        margin-left: 15px;
    }
</style>