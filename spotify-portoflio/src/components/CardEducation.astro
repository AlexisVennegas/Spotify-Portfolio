---
interface Props {
	id: number;
    title: string;
}

const { id, title } = Astro.props;



---
    <li class="liListsongs">    
        <a href="#">
            <div class="cover">
                <img src={`./${title}.png`} alt="una foto de un birrete"/>
            </div>
            <div class="info">
                <h5>{title}</h5>
                <p>Artista</p>
            </div>
        </a>
    </li>


<style>
    ul {
        list-style: none;
        width: 100%;
        height: 90%;
    }
    a {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        height: 10%;
        text-decoration: none;
        color: white;
        padding: 10px;
        margin-left: 20px;
    }
    .cover {
        width: 45px; /* Puedes ajustar el tamaño según sea necesario */
        height: 45px; /* Puedes ajustar el tamaño según sea necesario */
        border-radius: 0.375rem;
        background: linear-gradient(to bottom, rgba(208,40,56,0.5), rgba(40,56,208,0.5));
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .cover > img {
        width: 75%;
        margin-top: 5px;
    }
    .info {
        margin-left: 15px;
    }
    p {
        color: rgb(156 163 175);
    }
</style>